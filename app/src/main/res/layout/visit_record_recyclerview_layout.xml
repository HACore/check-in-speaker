<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--날짜-->
        <TextView
            android:id="@+id/date_recyclerview"
            android:text="@string/visit_record_sample_date"
            android:layout_width="137dp"
            android:layout_height="19.25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="13.12dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>

        <!--주소-->
        <TextView
            android:id="@+id/address_recyclerview"
            android:text="@string/visit_record_sample_address"
            android:layout_width="322dp"
            android:layout_height="19.25dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="14.88dp"
            android:gravity="center_vertical"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>